<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora.MainPage">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="BackgroundColor" Value="DeepSkyBlue"/>
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="HeightRequest" Value="80"/>
            <Setter Property="WidthRequest" Value="80"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center">

        <Entry x:Name="Display"
               Text="0"
               FontSize="48"
               HorizontalOptions="End"
               TextColor="Black"
               IsReadOnly="True"
               Margin="0,0,0,20" />

        <!-- Teclado de la calculadora -->
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
              ColumnDefinitions="Auto,Auto,Auto,Auto, Auto">

            <!-- Fila 1 -->
            <Button Grid.Row="0" Grid.Column="0" Text="C" Clicked="OnClearClicked" BackgroundColor="OrangeRed"/>
            <Button Grid.Row="0" Grid.Column="4" Text="/" Clicked="OnOperatorClicked" BackgroundColor="#FF9500"/>

            <!-- Fila 2 -->
            <Button Grid.Row="1" Grid.Column="0" Text="7" Clicked="OnNumberClicked"/>
            <Button Grid.Row="1" Grid.Column="1" Text="8" Clicked="OnNumberClicked"/>
            <Button Grid.Row="1" Grid.Column="2" Text="9" Clicked="OnNumberClicked"/>
            <Button Grid.Row="1" Grid.Column="3" Text="x" Clicked="OnOperatorClicked" BackgroundColor="#FF9500"/>

            <!-- Fila 3 -->
            <Button Grid.Row="2" Grid.Column="0" Text="4" Clicked="OnNumberClicked"/>
            <Button Grid.Row="2" Grid.Column="1" Text="5" Clicked="OnNumberClicked"/>
            <Button Grid.Row="2" Grid.Column="2" Text="6" Clicked="OnNumberClicked"/>
            <Button Grid.Row="2" Grid.Column="3" Text="-" Clicked="OnOperatorClicked" BackgroundColor="#FF9500"/>

            <!-- Fila 4 -->
            <Button Grid.Row="3" Grid.Column="0" Text="1" Clicked="OnNumberClicked"/>
            <Button Grid.Row="3" Grid.Column="1" Text="2" Clicked="OnNumberClicked"/>
            <Button Grid.Row="3" Grid.Column="2" Text="3" Clicked="OnNumberClicked"/>
            <Button Grid.Row="3" Grid.Column="3" Text="+" Clicked="OnOperatorClicked" BackgroundColor="#FF9500"/>

            <!-- Fila 5 -->
            <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Text="0" WidthRequest="170"/>
            <Button Grid.Row="4" Grid.Column="2" Text="." Clicked="OnNumberClicked"/>
            <Button Grid.Row="4" Grid.Column="3" Text="=" Clicked="OnEqualClicked" BackgroundColor="#FF9500"/>
            
            <!-- Fila 6-->
            <Button Grid.Row="0" Grid.Column="5" Text="MC" Clicked="OnMemoryClicked" BackgroundColor="CadetBlue"/>
            <Button Grid.Row="1" Grid.Column="5" Text="M+" Clicked="OnMemoryClicked" BackgroundColor="CadetBlue"/>
            <Button Grid.Row="2" Grid.Column="5" Text="M-" Clicked="OnMemoryClicked" BackgroundColor="CadetBlue"/>
            <Button Grid.Row="3" Grid.Column="5" Text="M"  Clicked="OnMemoryClicked" BackgroundColor="CadetBlue"/>
        </Grid>
    </VerticalStackLayout>

</ContentPage>
